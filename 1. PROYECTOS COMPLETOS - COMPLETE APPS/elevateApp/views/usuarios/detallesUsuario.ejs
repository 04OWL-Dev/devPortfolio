<div class="rounded row">
    <h2 class="text-center">Detalles del Usuario</h2>
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-3">
                <div><label for="username">Username</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="username" name="username" value="<%= username %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div><label for="password">Password</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="password" name="password" value="<%= password %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div><label for="rol">Rol</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="rol" name="rol" value="<%= rol %>">
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>
