<div class="rounded row">
    <h2 class="text-center">Detalles del Proveedor</h2>
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <div><label for="rifProveedor">RIF</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="rifProveedor" name="rifProveedor" value="<%= proveedor.rif %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div><label for="razonSocialProveedor">Razón Social</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="razonSocialProveedor" name="razonSocialProveedor" value="<%= proveedor.razon_social %>">
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div><label for="telefonoProveedor">Teléfono</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="telefonoProveedor" name="telefonoProveedor" value="<%= proveedor.telefono %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div><label for="direccionProveedor">Dirección</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <textarea readonly class="form-control" id="direccionProveedor" name="direccionProveedor" rows="1"><%= proveedor.direccion %></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div><label for="emailProveedor">Email</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="email" id="emailProveedor" name="emailProveedor" value="<%= proveedor.correo %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div><label for="paginaWebProveedor">Página Web</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="url" id="paginaWebProveedor" name="paginaWebProveedor" value="<%= proveedor.web %>">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
