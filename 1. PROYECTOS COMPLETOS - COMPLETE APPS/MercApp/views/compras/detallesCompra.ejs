

        <div class="rounded row">
            <h2 class="text-center mb-4"><%= datos.encabezado.codigo %></h2>  
                    <div>
                        <div class="row mb-2">                               
                            <div class="col-sm-4 ">
                                <div class=""><label for="cliente">Proveedor</label></div>                                
                                <div class="form-group">                                
                                    <div class="input-group">
                                        <input type="hidden" name="codigo_proveedor" id="codigo_proveedor" />
                                        <input readonly class="form-control"  type="search" id="proveedor" name="proveedor" value="<%= datos.encabezado.razon_social %>" >
                                    </div> 
                                </div>                   
                            </div>
                            <div class="col-sm-3 ">
                                <div class=""><label for="fechacompra">Fecha</label></div>
                                <div><input readonly class="form-control"  type="date" id="fechacompra" name="fechacompra" value="<%= datos.encabezado.fechac %>"></div>
                            </div>
                            <div class="col-sm-3 ">
                                <div class=""><label for="totalPedido">Total</label></div>
                                <div><input readonly class="form-control"  type="number" id="totalPedido" name="totalPedido" value="<%= datos.encabezado.total_compra%>"></div>
                            </div>
                        </div>
                        
                        
         </div>      


    <table class="col-sm-12 table table-hover table-bordered mb-2" id="tabla">
        <thead>
            <tr>
                <th class="texto">Imágen</th>
                <th class="texto">Código</th>
                <th class="texto">Producto</th>
                <th class="texto">Precio</th>
                <th class="texto">Cantidad</th>
                <th class="texto">Total</th>                
            </tr>
        </thead>
        <tbody>
            <% datos.detalle.forEach(producto => { %>
                <tr>
                    <td class="imagen"><img src="/img/productos/<%=producto.codigo_producto%>.png" width="50px" height="50px"></td>
                  <td><%= producto.codigo_producto %></td>
                  <td><%= producto.nombre_producto %></td>
                  <td><%= producto.precio %></td>
                  <td><%= producto.cantidad %></td>
                  <td><%= producto.total %></td>
                </tr>                                                  
                <% }) %>
        </tbody>
    </table>   

</div>
   

        
