<div class="rounded row">
    <h2 class="text-center mb-4">Detalles de la Categoría</h2>
    <div class="container">
      <div class="row mb-2">
        <div class="col-sm-6">
          <div><label for="nombreCategoria">Nombre</label></div>
          <div class="form-group">
            <div class="input-group">
              <input readonly class="form-control" type="text" id="nombreCategoria" name="nombreCategoria" value="<%= categoria.nombre %>">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div><label for="descripcionCategoria">Descripción</label></div>
          <div class="form-group">
            <div class="input-group">
              <textarea readonly class="form-control" id="descripcionCategoria" name="descripcionCategoria" rows="1"><%= categoria.descripcion %></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  