<div class="rounded row">
    <h2 class="text-center">Detalles del Cliente</h2>
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <div><label for="cedula">Cédula</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="cedula" name="cedula" value="<%= cliente.cedula %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div><label for="nombre">Nombre</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="nombre" name="nombre" value="<%= cliente.nombre %>">
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div><label for="telefono">Teléfono</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <input readonly class="form-control" type="text" id="telefono" name="telefono" value="<%= cliente.telefono %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div><label for="direccion">Dirección</label></div>
                <div class="form-group">
                    <div class="input-group">
                        <textarea readonly class="form-control" id="direccion" name="direccion" rows="1"><%= cliente.direccion %></textarea>
                    </div>
                </div>
            </div>
        </div>       
    </div>
</div>
